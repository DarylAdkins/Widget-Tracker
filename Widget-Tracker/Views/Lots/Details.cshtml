@model Widget_Tracker.Models.Lot

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Lot</h4>
    <hr />
    <input type="hidden" asp-for="Id" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>      
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayFor(model => model.AssociatedLine.Name)

        </dd>


        <dd>
            @foreach (LotProcess singleLotProcess in Model.LotProcesses)

            {
                <p class=@(singleLotProcess.TimeIn == null ? "notCompleteStep" : "completeStep")>
                    @singleLotProcess.Process.Name
                </p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <form asp-action="NextStep" asp-controller="Lots" asp-route-id="@Model.Id">
        <button >Move to Next Process</button>
    </form>
</div>

